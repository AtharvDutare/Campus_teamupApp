<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:background="@drawable/proper_cardview"
    android:backgroundTint="@color/off_white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="4dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="40dp"
                android:id="@+id/imageLayout"
                android:background="@drawable/circular_image"
                android:layout_centerVertical="true"
                android:layout_height="40dp">


                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageOfUser"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/profile_icon"
                    app:shapeAppearanceOverlay="@style/CircleImageView"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/deleteRole"
                android:visibility="invisible"
                android:rotation="90"
                android:background="@drawable/threedot"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_toRightOf="@+id/imageLayout"
                android:layout_toLeftOf="@+id/deleteRole"
                android:textStyle="bold"
                android:text="Name :"
                android:layout_margin="8dp"
                android:padding="5dp"
                android:id="@+id/userName"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/userRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"

                android:text="Role :"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="italic"
            android:gravity="center"
            android:text="Click here to view profile :"
            android:layout_margin="8dp"

            android:id="@+id/viewProfile"/>
    </LinearLayout>
</LinearLayout>