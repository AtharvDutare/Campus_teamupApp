<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserSignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#D19595"
            android:id="@+id/logo"
            android:layout_margin="30dp"
            android:background="@drawable/circular_image">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/app_logo"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/userName"
            app:cursorColor="@color/black"
            app:helperTextTextColor="#000000"
            app:boxStrokeColor="#000000"
            app:boxBackgroundMode="outline"
            app:hintTextColor="#000000"
            app:startIconDrawable="@drawable/profile_icon"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="First and last name"
                android:textColorHint="@color/black"
                android:inputType="textEmailAddress"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/signUpEmail"
            app:cursorColor="@color/black"
            app:helperTextTextColor="#000000"
            app:boxStrokeColor="#000000"
            app:boxBackgroundMode="outline"
            app:startIconDrawable="@drawable/email_icon"
            app:hintTextColor="#000000"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter email"
                android:textColorHint="@color/black"
                android:inputType="textEmailAddress"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/signUpPassword"
            app:cursorColor="@color/black"
            app:helperTextTextColor="#000000"
            app:boxStrokeColor="#000000"
            app:boxBackgroundMode="outline"
            app:hintTextColor="#000000"
            app:startIconDrawable="@drawable/password_icon"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter password"
                android:textColorHint="@color/black"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:layout_margin="20dp"
            android:text="Sign Up" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerInParent="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/loginButton"
                android:text="Login"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/signInGoogle"
            android:background="@drawable/common_google_signin_btn_text_dark_normal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Sign in with Google"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>