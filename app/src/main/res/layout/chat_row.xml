<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parentLayout"

    android:padding="5sp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="40dp"

            android:background="@drawable/rounded_chat"
            android:backgroundTint="@color/off_white"
            android:id="@+id/otherUserLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:padding="8sp"
                android:textSize="18sp"
                android:id="@+id/otherUser"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:textSize="12sp"
                android:id="@+id/messageTimeOfOther"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentUserLayout"
            android:layout_marginStart="40dp"

            android:background="@drawable/rounded_chat"
            android:backgroundTint="@color/link_color"
            android:layout_alignParentEnd="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:textSize="18sp"
                android:visibility="invisible"
                android:id="@+id/currentUser"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:textSize="12sp"
                android:id="@+id/messageTimeOfCurrent"
                />
        </LinearLayout>


</RelativeLayout>